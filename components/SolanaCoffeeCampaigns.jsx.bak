// Composant CreateCampaign
function CreateCampaign({ onClose, onCreate }) {
  const { publicKey } = useWallet();
  const [formData, setFormData] = useState({
    name: '',
    type: 'creator',
    image: '',
    description: '',
    goalAmount: '',
  });

  const handleSubmit = (e) => {
    e.preventDefault();
    if (!publicKey) {
      alert('Connectez votre wallet d\'abord');
      return;
    }

    const newCampaign = {
      id: Date.now(),
      ...formData,
      avatar: formData.type === 'creator' ? '‚ú®' : '‚ù§Ô∏è',
      walletAddress: publicKey.toString(),
      currentAmount: 0,
      goalAmount: parseFloat(formData.goalAmount),
      supporters: 0,
      timeRemaining: '30 jours',
      urgent: false,
      recentDonations: [],
    };

    onCreate(newCampaign);
    onClose();
  };

  return (
    <div style={styles.modalOverlay} onClick={onClose}>
      <div style={styles.modal} onClick={(e) => e.stopPropagation()} className="modal">
        <button onClick={onClose} style={styles.closeBtn} className="close-btn">‚úï</button>
        
        <div style={styles.modalHeader}>
          <h2 style={styles.modalTitle}>Cr√©er une campagne</h2>
          <p style={styles.modalSubtitle}>Partagez votre projet avec la communaut√©</p>
        </div>
        
        <form onSubmit={handleSubmit} style={styles.form}>
          <div style={styles.formGroup}>
            <label style={styles.label}>Nom *</label>
            <input
              type="text"
              value={formData.name}
              onChange={(e) => setFormData({...formData, name: e.target.value})}
              placeholder="Votre nom ou celui de l'association"
              required
              style={styles.input}
            />
          </div>

          <div style={styles.formGroup}>
            <label style={styles.label}>Type *</label>
            <select
              value={formData.type}
              onChange={(e) => setFormData({...formData, type: e.target.value})}
              style={styles.input}
            >
              <option value="creator">‚ú® Cr√©ateur</option>
              <option value="charity">‚ù§Ô∏è Association</option>
            </select>
          </div>

          <div style={styles.formGroup}>
            <label style={styles.label}>Photo (URL) *</label>
            <input
              type="url"
